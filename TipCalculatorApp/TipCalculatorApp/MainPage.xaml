<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TipCalculatorApp.MainPage">

    <TableView Intent="Form">
        <TableSection Title="Datos">
            <EntryCell
                x:Name="txtTotal"
                Label="Total"
                Placeholder="$0.0"
            />
            <EntryCell
                x:Name="txtPropina"
                Label="Propina (%)"
                Placeholder="0.0"
            />
            <EntryCell
                x:Name="txtNoPersonas"
                Label="Número de personas"
                Placeholder="0"
            />
        </TableSection>
        <TableSection>
            <ViewCell>
                <ViewCell.View>
                    <StackLayout>
                        <Button
                            x:Name="btnCalcular"
                            Text="Calcular"
                            Clicked="BtnCalcular_Clicked"
                        />
                    </StackLayout>
                </ViewCell.View>
            </ViewCell>
        </TableSection>
        <TableSection Title="Resultado">
            <TextCell
                x:Name="lblPropina"
                Text="Propina:"
                Detail="$0.0"
            />
            <TextCell
                x:Name="lblTotal"
                Text="Total:"
                Detail="$0.0"
            />
            <TextCell
                x:Name="lblPropinaPorPersona"
                Text="Propina por persona:"
                Detail="$0.0"
            />
            <TextCell
                x:Name="lblTotalPorPersona"
                Text="Total por persona:"
                Detail="$0.0"
            />
        </TableSection>
    </TableView>

</ContentPage>
